{{!-- views/blog.handlebars --}}
<div class="posts text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>

{{!-- comments are displayed in a container with the commenter's name and the comment text--}}
  {{#if logged_in}}
  <form class="form comment_form">
    <div class="form-group">
      <textarea class="form-input" id="body" name="body" placeholder="Add a comment"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Add Comment</button>
    </div>
  </form>
  {{/if}}

  <h3>Comments</h3>
  <div class="comments">
    {{#each comments }}
    <div class="container">
      <section class="comment">
        <div class="name">
          {{user.name}} 
        </div>
        <div class="text">
          {{text}}
        </div>
      </section>
    </div>
    {{/each}}
  </div>
</div>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}

