{{!-- views/signup.handlebars --}}
<h2>Sign Up</h2>
<form id="signup-form">
  <div class="form-group">
    <label for="name-signup">Name:</label>
    <input type="text" class="form-control" id="name-signup" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <label for="email-signup">Email:</label>
    <input type="email" class="form-control" id="email-signup" placeholder="Enter your email">
  </div>
  <div class="form-group">
    <label for="password-signup">Password:</label>
    <input type="password" class="form-control" id="password-signup" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="col-md-6">
  <a href="/login" class="login">Login Instead</a>
</div>

<script src="/js/signup.js"></script>
